{
    "hizbs": [
        {
            "chapter": 87,
            "verse": 1,
            "text": "atyunnatanāya ninṟe rakṣitāvinṟe nāmaṁ prakīrttikkuka"
        },
        {
            "chapter": 87,
            "verse": 2,
            "text": "sr̥ṣṭikkukayuṁ, sanvidhānikkukayuṁ ceyta (rakṣitāvinṟe"
        },
        {
            "chapter": 87,
            "verse": 3,
            "text": "vyavastha nirṇayiccu mārgadarśanaṁ nalkiyavanuṁ"
        },
        {
            "chapter": 87,
            "verse": 4,
            "text": "mēccil puṟaṅṅaḷ ulpādippiccavanuṁ"
        },
        {
            "chapter": 87,
            "verse": 5,
            "text": "enniṭṭ atine uṇaṅṅikkariñña cavaṟākki tīrttavanumāya (rakṣitāvinṟe nāmaṁ"
        },
        {
            "chapter": 87,
            "verse": 6,
            "text": "ninakk nāṁ ōtittarāṁ. nī maṟannupēākukayilla"
        },
        {
            "chapter": 87,
            "verse": 7,
            "text": "allāhu uddēśiccateāḻike. tīrccayāyuṁ avan parasyamāyatuṁ, rahasyamāyirikkunnatuṁ aṟiyunnu"
        },
        {
            "chapter": 87,
            "verse": 8,
            "text": "kūṭutal eḷuppamuḷḷatilēkk ninakk nāṁ sekaryamuṇṭākkittarunnatumāṇ‌"
        },
        {
            "chapter": 87,
            "verse": 9,
            "text": "atināl upadēśaṁ phalappeṭunnuveṅkil nī upadēśiccu keāḷḷuka"
        },
        {
            "chapter": 87,
            "verse": 10,
            "text": "bhayappeṭunnavar upadēśaṁ svīkariccu keāḷḷunnatāṇ‌"
        },
        {
            "chapter": 87,
            "verse": 11,
            "text": "ēṟṟavuṁ nirbhāgyavānāyiṭṭuḷḷavan atine (upadēśatte) viṭṭakannu pēākunnatāṇ‌"
        },
        {
            "chapter": 87,
            "verse": 12,
            "text": "valiya agniyil kaṭann eriyunnavanatre avan"
        },
        {
            "chapter": 87,
            "verse": 13,
            "text": "pinnīṭ avan atil marikkukayilla. jīvikkukayumilla"
        },
        {
            "chapter": 87,
            "verse": 14,
            "text": "tīrccayāyuṁ pariśud'dhi nēṭiyavar vijayaṁ prāpiccu"
        },
        {
            "chapter": 87,
            "verse": 15,
            "text": "tanṟe rakṣitāvinṟe nāmaṁ smarikkukayuṁ enniṭṭ namaskarikkukayuṁ (ceytavan"
        },
        {
            "chapter": 87,
            "verse": 16,
            "text": "pakṣe, niṅṅaḷ aihikajīvitattinn kūṭutal prādhān'yaṁ nalkunnu"
        },
        {
            "chapter": 87,
            "verse": 17,
            "text": "paralēākamākunnu ēṟṟavuṁ uttamavuṁ nilanilkkunnatuṁ"
        },
        {
            "chapter": 87,
            "verse": 18,
            "text": "tīrccayāyuṁ it ādyatte ēṭukaḷil tanneyuṇṭ‌"
        },
        {
            "chapter": 87,
            "verse": 19,
            "text": "atāyat ibrāhīminṟeyuṁ mūsāyuṭeyuṁ ēṭukaḷil"
        },
        {
            "chapter": 88,
            "verse": 1,
            "text": "(nabiyē,) ā mūṭunna sambhavatte sambandhicca varttamānaṁ ninakk vannukiṭṭiyēā"
        },
        {
            "chapter": 88,
            "verse": 2,
            "text": "annē divasaṁ cila mukhaṅṅaḷ tāḻmakāṇikkunnatuṁ"
        },
        {
            "chapter": 88,
            "verse": 3,
            "text": "paṇiyeṭutt kṣīṇiccatumāyirikkuṁ"
        },
        {
            "chapter": 88,
            "verse": 4,
            "text": "cūṭēṟiya agniyil ava pravēśikkunnatāṇ‌"
        },
        {
            "chapter": 88,
            "verse": 5,
            "text": "cuṭṭutiḷakkunna oru uṟavil ninn avarkku kuṭippikkappeṭunnatāṇ‌"
        },
        {
            "chapter": 88,
            "verse": 6,
            "text": "ḷarī'il ninnallāte avarkk yāteāru āhāravumilla"
        },
        {
            "chapter": 88,
            "verse": 7,
            "text": "at pēāṣaṇaṁ nalkukayilla. viśappin śamanamuṇṭākkukayumilla"
        },
        {
            "chapter": 88,
            "verse": 8,
            "text": "cila mukhaṅṅaḷ annu tuṭuttu minuttatāyirikkuṁ"
        },
        {
            "chapter": 88,
            "verse": 9,
            "text": "avayuṭe prayatnatteppaṟṟi tr̥ptiyaṭaññavayumāyirikkuṁ"
        },
        {
            "chapter": 88,
            "verse": 10,
            "text": "unnatamāya svargattil"
        },
        {
            "chapter": 88,
            "verse": 11,
            "text": "aviṭe yāteāru nirart'thakamāya vākkuṁ avar kēḷkkukayilla"
        },
        {
            "chapter": 88,
            "verse": 12,
            "text": "atil oḻuki keāṇṭirikkunna aruviyuṇṭ‌"
        },
        {
            "chapter": 88,
            "verse": 13,
            "text": "atil uyarttivekkappeṭṭa kaṭṭilukaḷuṁ"
        },
        {
            "chapter": 88,
            "verse": 14,
            "text": "tayyāṟākki vekkappeṭṭa kēāppakaḷuṁ"
        },
        {
            "chapter": 88,
            "verse": 15,
            "text": "aṇiyāyi vekkappeṭṭa talayaṇakaḷuṁ"
        },
        {
            "chapter": 88,
            "verse": 16,
            "text": "viriccuvekkappeṭṭa paravatānikaḷumuṇṭ‌"
        },
        {
            "chapter": 88,
            "verse": 17,
            "text": "oṭṭakattinṟe nērkk avar nēākkunnillē? at eṅṅane sr̥ṣṭikkappeṭṭirikkunnu enn‌"
        },
        {
            "chapter": 88,
            "verse": 18,
            "text": "ākāśattēkk (avar nēākkunnillē?) at eṅṅane uyarttappeṭṭirikkunnu enn‌"
        },
        {
            "chapter": 88,
            "verse": 19,
            "text": "parvvataṅṅaḷilēkk (avar nēākkunnillē?) ava eṅṅane nāṭṭinirttappeṭṭirikkunnu venn‌"
        },
        {
            "chapter": 88,
            "verse": 20,
            "text": "bhūmiyilēkk (avar nēākkunnillē?) at eṅṅane parattappeṭṭirikkunnuvenn‌"
        },
        {
            "chapter": 88,
            "verse": 21,
            "text": "atināl (nabiyē,) nī ulbēādhippikkuka. nī oru ulbēādhakan mātramākunnu"
        },
        {
            "chapter": 88,
            "verse": 22,
            "text": "nī avaruṭe mēl adhikāraṁ celuttēṇṭavanalla"
        },
        {
            "chapter": 88,
            "verse": 23,
            "text": "pakṣe, vallavanuṁ tiriññukaḷayukayuṁ, aviśvasikkukayuṁ ceyyunna pakṣaṁ"
        },
        {
            "chapter": 88,
            "verse": 24,
            "text": "allāhu avane ēṟṟavuṁ valiya śikṣa śikṣikkunnatāṇ‌"
        },
        {
            "chapter": 88,
            "verse": 25,
            "text": "tīrccayāyuṁ nam'muṭe aṭuttēkkāṇ avaruṭe maṭakkaṁ"
        },
        {
            "chapter": 88,
            "verse": 26,
            "text": "pinnīṭ‌, tīrccayāyuṁ nam'muṭe bādhyatayāṇ avaruṭe vicāraṇa"
        },
        {
            "chapter": 89,
            "verse": 1,
            "text": "prabhātaṁ tanneyāṇa satyaṁ"
        },
        {
            "chapter": 89,
            "verse": 2,
            "text": "pattu rātrikaḷ tanneyāṇa satyaṁ"
        },
        {
            "chapter": 89,
            "verse": 3,
            "text": "iraṭṭayuṁ oṟṟayuṁ tanneyāṇa satyaṁ"
        },
        {
            "chapter": 89,
            "verse": 4,
            "text": "rātri sañcaricc keāṇṭirikke at tanneyāṇa satyaṁ"
        },
        {
            "chapter": 89,
            "verse": 5,
            "text": "atil (mēl paṟaññavayil) kāryabēādhamuḷḷavann satyattin vakayuṇēṭā"
        },
        {
            "chapter": 89,
            "verse": 6,
            "text": "ād samudāyatte keāṇṭ ninṟe rakṣitāv entu ceytuvenn nī kaṇṭillē"
        },
        {
            "chapter": 89,
            "verse": 7,
            "text": "atāyat tūṇukaḷuṭe uṭamakaḷāya iṟaṁ gēātratte keāṇṭ‌"
        },
        {
            "chapter": 89,
            "verse": 8,
            "text": "tattulyamāyiṭṭeānn rājyaṅṅaḷil sr̥ṣṭikkappeṭṭiṭṭillātta gēātraṁ"
        },
        {
            "chapter": 89,
            "verse": 9,
            "text": "tāḻ‌varayil pāṟaveṭṭi keṭṭiṭamuṇṭākkiyavarāya thamūd gēātrattekkeāṇṭuṁ"
        },
        {
            "chapter": 89,
            "verse": 10,
            "text": "āṇikaḷuṭe āḷāya phir'aunekkeāṇṭuṁ"
        },
        {
            "chapter": 89,
            "verse": 11,
            "text": "nāṭukaḷil atikramaṁ pravarttikkukayuṁ"
        },
        {
            "chapter": 89,
            "verse": 12,
            "text": "aviṭe kuḻappaṁ vard'dhippikkukayuṁ ceytavarāṇavar"
        },
        {
            "chapter": 89,
            "verse": 13,
            "text": "atināl ninṟe rakṣitāv avaruṭe mēl śikṣayuṭe cam'maṭṭi varṣiccu"
        },
        {
            "chapter": 89,
            "verse": 14,
            "text": "tīrccayāyuṁ ninṟe rakṣitāv patiyirikkunna sthānattu tanneyuṇṭ‌"
        },
        {
            "chapter": 89,
            "verse": 15,
            "text": "ennāl manuṣyane avanṟe rakṣitāv parīkṣikkukayuṁ aṅṅane avane ādarikkukayuṁ avan sekhyaṁ nalkukayuṁ ceytāl avan paṟayuṁ; enṟe rakṣitāv enne ādariccirikkunnu enn‌"
        },
        {
            "chapter": 89,
            "verse": 16,
            "text": "ennāl avane (manuṣyane) avan parīkṣikkukayuṁ enniṭṭavanṟe upajīvanaṁ iṭuṅṅiyatākkukayuṁ ceytāl avan paṟayuṁ; enṟe rakṣitāv enne apamāniccirikkunnu enn‌"
        },
        {
            "chapter": 89,
            "verse": 17,
            "text": "alla, pakṣe niṅṅaḷ anāthaye ādarikkunnilla"
        },
        {
            "chapter": 89,
            "verse": 18,
            "text": "pāvappeṭṭavanṟe āhārattin niṅṅaḷ prēātsāhanaṁ nalkunnumilla"
        },
        {
            "chapter": 89,
            "verse": 19,
            "text": "anantarāvakāśa svatt niṅṅaḷ vārikkūṭṭi tinnukayuṁ ceyyunnu"
        },
        {
            "chapter": 89,
            "verse": 20,
            "text": "dhanatte niṅṅaḷ amitamāya tēātil snēhikkukayuṁ ceyyunnu"
        },
        {
            "chapter": 89,
            "verse": 21,
            "text": "alla, bhūmi peāṭipeāṭiyāyi peāṭikkappeṭukayuṁ"
        },
        {
            "chapter": 89,
            "verse": 22,
            "text": "ninṟe rakṣitāvuṁ, aṇiyaṇiyāyi malakkukaḷuṁ varukayuṁ"
        },
        {
            "chapter": 89,
            "verse": 23,
            "text": "ann narakaṁ keāṇṭu varappeṭukayuṁ ceytāl! annē divasaṁ manuṣyann ōrma varunnatāṇ‌. eviṭeninnāṇavann ōrma varunnat‌"
        },
        {
            "chapter": 89,
            "verse": 24,
            "text": "avan paṟayuṁ. ayyēā, ñān enṟe jīvitattinu vēṇṭi munkūṭṭi (salkarm'maṅṅaḷ) ceytuveccirunneṅkil etra nannāyirunnēne"
        },
        {
            "chapter": 89,
            "verse": 25,
            "text": "appēāḷ annē divasaṁ allāhu śikṣikkunnaprakāraṁ orāḷuṁ śikṣikkukayilla"
        },
        {
            "chapter": 89,
            "verse": 26,
            "text": "avan piṭiccu bandhikkunnat pēāle orāḷuṁ piṭiccu bandhikkunnatumalla"
        },
        {
            "chapter": 89,
            "verse": 27,
            "text": "hē; samādhānamaṭañña ātmāvē"
        },
        {
            "chapter": 89,
            "verse": 28,
            "text": "nī ninṟe rakṣitāviṅkalēkk tr̥ptippeṭṭukeāṇṭuṁ, tr̥pti labhiccu keāṇṭuṁ maṭaṅṅikkeāḷḷuka"
        },
        {
            "chapter": 89,
            "verse": 29,
            "text": "enniṭṭ enṟe aṭiyānmāruṭe kūṭṭattil pravēśiccu keāḷḷuka"
        },
        {
            "chapter": 89,
            "verse": 30,
            "text": "enṟe svargattil pravēśiccu keāḷḷuka"
        }
    ]
}