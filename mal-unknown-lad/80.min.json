{"chapter":[{"chapter":80,"verse":1,"text":"addēhaṁ mukhaṁ cuḷiccu tiriññukaḷaññu"},{"chapter":80,"verse":2,"text":"addēhattinṟe (nabiyuṭe) aṭutt ā andhan vannatināl"},{"chapter":80,"verse":3,"text":"(nabiyē,) ninakk entaṟiyāṁ? ayāḷ (andhan) oru vēḷa pariśud'dhi prāpiccēkkāmallēā"},{"chapter":80,"verse":4,"text":"alleṅkil upadēśaṁ svīkarikkukayuṁ, ā upadēśaṁ ayāḷkk prayēājanappeṭukayuṁ ceytēkkāmallēā"},{"chapter":80,"verse":5,"text":"ennāl svayaṁ paryāptata naṭiccavanākaṭṭe"},{"chapter":80,"verse":6,"text":"nī avanṟe nēre śrad'dhatirikkunnu"},{"chapter":80,"verse":7,"text":"avan pariśud'dhi prāpikkātirikkunnatināl ninakkentāṇ kuṟṟaṁ"},{"chapter":80,"verse":8,"text":"ennāl ninṟe aṭukkal ōṭivannavanākaṭṭe"},{"chapter":80,"verse":9,"text":"(allāhuve) avan bhayappeṭunnavanāyikkeāṇṭ‌"},{"chapter":80,"verse":10,"text":"avanṟe kāryattil nī aśrad'dhakāṇikkunnu"},{"chapter":80,"verse":11,"text":"nis'sanśayaṁ it (khur'ān) oru ulbēādhanamākunnu; tīrcca"},{"chapter":80,"verse":12,"text":"atināl ār uddēśikkunnuvēā avanat ōrmicc keāḷḷaṭṭe"},{"chapter":80,"verse":13,"text":"ādaraṇīyamāya cila ēṭukaḷilāṇat‌"},{"chapter":80,"verse":14,"text":"aunnatyaṁ nalkappeṭṭatuṁ pariśud'dhamākkappeṭṭatumāya (ēṭukaḷil"},{"chapter":80,"verse":15,"text":"cila sandēśavāhakaruṭe kaikaḷilāṇat‌"},{"chapter":80,"verse":16,"text":"mān'yanmāruṁ puṇyavānmāruṁ āyiṭṭuḷḷavaruṭe"},{"chapter":80,"verse":17,"text":"manuṣyan nāśamaṭayaṭṭe. entāṇavan itra nandikeṭṭavanākān"},{"chapter":80,"verse":18,"text":"ēteāru vastuvil ninnāṇ allāhu avane sr̥ṣṭiccat‌"},{"chapter":80,"verse":19,"text":"oru bījattil ninn avane sr̥ṣṭikkukayuṁ, enniṭṭ avane (avanṟe kāryaṁ) vyavasthappeṭuttukayuṁ ceytu"},{"chapter":80,"verse":20,"text":"pinnīṭ avan mārgaṁ eḷuppamākkukayuṁ ceytu"},{"chapter":80,"verse":21,"text":"anantaraṁ avane marippikkukayuṁ, khab‌ṟil maṟaykkukayuṁ ceytu"},{"chapter":80,"verse":22,"text":"pinnīṭ avan uddēśikkumpēāḷ avane uyirtteḻunnēlpikkunnatāṇ‌"},{"chapter":80,"verse":23,"text":"nis'sanśayaṁ, avanēāṭ allāhu kalpiccat avan nirvahiccilla"},{"chapter":80,"verse":24,"text":"ennāl manuṣyan tanṟe bhakṣaṇatteppaṟṟi onnu cinticc nēākkaṭṭe"},{"chapter":80,"verse":25,"text":"nāṁ śaktiyāyi maḻa veḷḷaṁ ceāriññukeāṭuttu"},{"chapter":80,"verse":26,"text":"pinnīṭ nāṁ bhūmiye oru tarattil piḷartti"},{"chapter":80,"verse":27,"text":"enniṭṭ atil nāṁ dhān'yaṁ muḷappiccu"},{"chapter":80,"verse":28,"text":"muntiriyuṁ paccakkaṟikaḷuṁ"},{"chapter":80,"verse":29,"text":"olīvuṁ īntappanayuṁ"},{"chapter":80,"verse":30,"text":"iṭatūrnnu nilkkunna tēāṭṭaṅṅaḷuṁ"},{"chapter":80,"verse":31,"text":"paḻavargavuṁ pulluṁ"},{"chapter":80,"verse":32,"text":"niṅṅaḷkkuṁ niṅṅaḷuṭe kannukālikaḷkkuṁ upayēāgattināyiṭṭ‌"},{"chapter":80,"verse":33,"text":"ennāl cekiṭaṭappikkunna ā śabdaṁ vannāl"},{"chapter":80,"verse":34,"text":"atāyat manuṣyan tanṟe sahēādarane viṭṭ ōṭippēākunna divasaṁ"},{"chapter":80,"verse":35,"text":"tanṟe mātāvineyuṁ pitāvineyuṁ"},{"chapter":80,"verse":36,"text":"tanṟe bhāryayeyuṁ makkaḷeyuṁ"},{"chapter":80,"verse":37,"text":"avarilppeṭṭa ōrēā manuṣyanuṁ tanikk matiyāvunnatra (cintā) viṣayaṁ ann uṇṭāyirikkuṁ"},{"chapter":80,"verse":38,"text":"ann cila mukhaṅṅaḷ prasannatayuḷḷavayāyirikkuṁ"},{"chapter":80,"verse":39,"text":"cirikkunnavayuṁ santēāṣaṁ keāḷḷunnavayuṁ"},{"chapter":80,"verse":40,"text":"veṟe cila mukhaṅṅaḷākaṭṭe ann peāṭi puraṇṭirikkuṁ"},{"chapter":80,"verse":41,"text":"avaye kūriruṭṭ mūṭiyirikkuṁ"},{"chapter":80,"verse":42,"text":"akkūṭṭarākunnu aviśvāsikaḷuṁ adharm'makārikaḷumāyiṭṭuḷḷavar"}]}