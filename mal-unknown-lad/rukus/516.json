{
    "rukus": [
        {
            "chapter": 77,
            "verse": 1,
            "text": "tuṭarettuṭare ayakkappeṭunnavayuṁ"
        },
        {
            "chapter": 77,
            "verse": 2,
            "text": "śaktiyāyi āññaṭikkunnavayuṁ"
        },
        {
            "chapter": 77,
            "verse": 3,
            "text": "parakke vyāpippikkunnavayuṁ"
        },
        {
            "chapter": 77,
            "verse": 4,
            "text": "vērtiriccu vivēcanaṁ ceyyunnavayuṁ"
        },
        {
            "chapter": 77,
            "verse": 5,
            "text": "divyasandēśaṁ iṭṭukeāṭukkunnavayumāyiṭṭuḷḷavaye tanneyākunnu satyaṁ"
        },
        {
            "chapter": 77,
            "verse": 6,
            "text": "oru oḻikaḻivāyikeāṇṭēā tākkītāyikkeāṇṭēā"
        },
        {
            "chapter": 77,
            "verse": 7,
            "text": "tīrccayāyuṁ niṅṅaḷēāṭ tākkīt ceyyappeṭunna kāryaṁ sambhavikkunnatu tanneyākunnu"
        },
        {
            "chapter": 77,
            "verse": 8,
            "text": "nakṣatraṅṅaḷuṭe prakāśaṁ māykkappeṭukayuṁ"
        },
        {
            "chapter": 77,
            "verse": 9,
            "text": "ākāśaṁ piḷarttappeṭukayuṁ"
        },
        {
            "chapter": 77,
            "verse": 10,
            "text": "parvvataṅṅaḷ peāṭikkappeṭukayuṁ"
        },
        {
            "chapter": 77,
            "verse": 11,
            "text": "dūtanmārkk samayaṁ nirṇayiccu keāṭukkappeṭukayuṁ ceytāl"
        },
        {
            "chapter": 77,
            "verse": 12,
            "text": "ēteāru divasattēkkāṇ avarkk avadhi niścayikkappeṭṭirikkunnat‌"
        },
        {
            "chapter": 77,
            "verse": 13,
            "text": "tīrumānattinṟe divasattēkk‌"
        },
        {
            "chapter": 77,
            "verse": 14,
            "text": "ā tīrumānattinṟe divasaṁ entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 77,
            "verse": 15,
            "text": "annē divasaṁ niṣēdhiccu taḷḷiyavarkkākunnu nāśaṁ"
        },
        {
            "chapter": 77,
            "verse": 16,
            "text": "pūrvvikanmāre nāṁ naśippiccu kaḷaññillē"
        },
        {
            "chapter": 77,
            "verse": 17,
            "text": "pinnīṭ pingāmikaḷeyuṁ avaruṭe pinnāle nāṁ ayakkunnatāṇ‌"
        },
        {
            "chapter": 77,
            "verse": 18,
            "text": "aprakāramāṇ nāṁ kuṟṟavāḷikaḷekkeāṇṭ pravarttikkuka"
        },
        {
            "chapter": 77,
            "verse": 19,
            "text": "annē divasaṁ niṣēdhiccu taḷḷiyavarkkāyirikkuṁ nāśaṁ"
        },
        {
            "chapter": 77,
            "verse": 20,
            "text": "nis'sārappeṭṭa oru drāvakattil ninn niṅṅaḷe nāṁ sr̥ṣṭiccillē"
        },
        {
            "chapter": 77,
            "verse": 21,
            "text": "enniṭṭ nāṁ atine bhadramāya oru saṅkētattil veccu"
        },
        {
            "chapter": 77,
            "verse": 22,
            "text": "niścitamāya oru avadhi vare"
        },
        {
            "chapter": 77,
            "verse": 23,
            "text": "aṅṅane nāṁ (ellāṁ) nirṇayiccu. appēāḷ nāṁ etra nalla nirṇayakkāran"
        },
        {
            "chapter": 77,
            "verse": 24,
            "text": "annē divasaṁ niṣēdhiccu taḷḷiyavarkkākunnu nāśaṁ"
        },
        {
            "chapter": 77,
            "verse": 25,
            "text": "bhūmiye nāṁ uḷkeāḷḷunnatākkiyillē"
        },
        {
            "chapter": 77,
            "verse": 26,
            "text": "mariccavareyuṁ jīviccirikkunnavareyuṁ"
        },
        {
            "chapter": 77,
            "verse": 27,
            "text": "atil unnataṅṅaḷāyi uṟaccunilkkunna parvvataṅṅaḷe nāṁ vekkukayuṁ ceytirikkunnu. niṅṅaḷkku nāṁ svacchajalaṁ kuṭikkān tarikayuṁ ceytirikkunnu"
        },
        {
            "chapter": 77,
            "verse": 28,
            "text": "annē divasaṁ niṣēdhiccu taḷḷiyavarkkākunnu nāśaṁ"
        },
        {
            "chapter": 77,
            "verse": 29,
            "text": "(hē, satyaniṣēdhikaḷē,) enteānnineyāyirunnēā niṅṅaḷ niṣēdhiccu taḷḷiyirunnat atilēkk niṅṅaḷ pēāyi kkeāḷḷuka"
        },
        {
            "chapter": 77,
            "verse": 30,
            "text": "mūnn śākhakaḷuḷḷa oru taraṁ taṇalilēkk niṅṅaḷ pēāyikkeāḷḷuka"
        },
        {
            "chapter": 77,
            "verse": 31,
            "text": "at taṇal nalkunnatalla. tījvālayil ninn sanrakṣaṇaṁ nalkunnatumalla"
        },
        {
            "chapter": 77,
            "verse": 32,
            "text": "tīrccayāyuṁ at (narakaṁ) valiya keṭṭiṭaṁ pēāle uyaramuḷḷa tīppeāri teṟippiccu keāṇṭirikkuṁ"
        },
        {
            "chapter": 77,
            "verse": 33,
            "text": "at (tīppeāri) maññaniṟamuḷḷa oṭṭaka kūṭṭaṅṅaḷeppēāleyāyirikkuṁ"
        },
        {
            "chapter": 77,
            "verse": 34,
            "text": "annē divasaṁ niṣēdhiccu taḷḷiyavarkkākunnu nāśaṁ"
        },
        {
            "chapter": 77,
            "verse": 35,
            "text": "avar miṇṭāttatāya divasamākunnu it‌"
        },
        {
            "chapter": 77,
            "verse": 36,
            "text": "avarkk oḻikaḻivu bēādhippikkān anuvādaṁ nalkappeṭukayumilla"
        },
        {
            "chapter": 77,
            "verse": 37,
            "text": "annē divasaṁ niṣēdhiccu taḷḷiyavarkkākunnu nāśaṁ"
        },
        {
            "chapter": 77,
            "verse": 38,
            "text": "(annavarēāṭ paṟayappeṭuṁ:) tīrumānattinṟe divasamāṇit‌. niṅṅaḷeyuṁ pūrvvikanmāreyuṁ nāṁ itā orumiccukūṭṭiyirikkunnu"
        },
        {
            "chapter": 77,
            "verse": 39,
            "text": "ini niṅṅaḷkk valla tantravuṁ prayēāgikkānuṇṭeṅkil ā tantraṁ prayēāgiccu keāḷḷuka"
        },
        {
            "chapter": 77,
            "verse": 40,
            "text": "annē divasaṁ niṣēdhiccu taḷḷiyavarkkākunnu nāśaṁ"
        }
    ]
