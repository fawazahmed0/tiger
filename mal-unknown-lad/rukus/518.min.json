{"rukus":[{"chapter":78,"verse":1,"text":"entineppaṟṟiyāṇ avar parasparaṁ cēādiccu keāṇṭirikkunnat‌"},{"chapter":78,"verse":2,"text":"ā mahattāya vr̥ttāntatteppaṟṟi"},{"chapter":78,"verse":3,"text":"avar ēteāru kāryattil abhiprāyavyatyāsattilāyi kkeāṇṭirikkunnuvēā atineppaṟṟi"},{"chapter":78,"verse":4,"text":"nis'sanśayaṁ; avar vaḻiye aṟiññu keāḷḷuṁ"},{"chapter":78,"verse":5,"text":"vīṇṭuṁ nis'sanśayaṁ; avar vaḻiye aṟiññu keāḷḷuṁ"},{"chapter":78,"verse":6,"text":"bhūmiye nāṁ oru virippākkiyillē"},{"chapter":78,"verse":7,"text":"parvvataṅṅaḷe āṇikaḷākkukayuṁ (ceytillē"},{"chapter":78,"verse":8,"text":"niṅṅaḷe nāṁ iṇakaḷāyi sr̥ṣṭikkukayuṁ ceytirikkunnu"},{"chapter":78,"verse":9,"text":"niṅṅaḷuṭe uṟakkatte nāṁ viśramamākkukayuṁ ceytirikkunnu"},{"chapter":78,"verse":10,"text":"rātriye nāṁ oru vastramākkukayuṁ"},{"chapter":78,"verse":11,"text":"pakaline nāṁ jīvasandhāraṇavēḷayākkukayuṁ ceytirikkunnu"},{"chapter":78,"verse":12,"text":"niṅṅaḷkk mīte baliṣṭhamāya ēḻu ākāśaṅṅaḷ nāṁ nirmikkukayuṁ"},{"chapter":78,"verse":13,"text":"kattijvalikkunna oru viḷakk nāṁ uṇṭākkukayuṁ ceytirikkunnu"},{"chapter":78,"verse":14,"text":"kārmēghaṅṅaḷil ninn kutti oḻukunna veḷḷaṁ nāṁ iṟakkukayuṁ ceytu"},{"chapter":78,"verse":15,"text":"atu mukhēna dhān'yavuṁ sasyavuṁ nāṁ puṟattu keāṇṭu varān vēṇṭi"},{"chapter":78,"verse":16,"text":"iṭatūrnna tēāṭṭaṅṅaḷuṁ"},{"chapter":78,"verse":17,"text":"tīrccayāyuṁ tīrumānattinṟe divasaṁ samayaṁ nirṇayikkappeṭṭatāyirikkunnu"},{"chapter":78,"verse":18,"text":"atāyat kāhaḷattil ūtappeṭukayuṁ, niṅṅaḷ kūṭṭaṅkūṭṭamāyi vannettukayuṁ ceyyunna divasaṁ"},{"chapter":78,"verse":19,"text":"ākāśaṁ tuṟakkappeṭukayuṁ enniṭṭat pala kavāṭaṅṅaḷāyi tīrukayuṁ ceyyuṁ"},{"chapter":78,"verse":20,"text":"parvvataṅṅaḷ sañcarippikkappeṭukayuṁ aṅṅane ava marīcika pēāle āyittīrukayuṁ ceyyuṁ"},{"chapter":78,"verse":21,"text":"tīrccayāyuṁ narakaṁ kāttirikkunna sthalamākunnu"},{"chapter":78,"verse":22,"text":"atikramakārikaḷkk maṭaṅṅiccellānuḷḷa sthalaṁ"},{"chapter":78,"verse":23,"text":"avar atil yugaṅṅaḷēāḷaṁ tāmasikkunnavarāyirikkuṁ"},{"chapter":78,"verse":24,"text":"kuḷirmayēā kuṭinīrēā avar aviṭe āsvadikkukayilla"},{"chapter":78,"verse":25,"text":"keāṭun̄cūṭuḷḷa veḷḷavuṁ keāṭuṁ taṇuppuḷḷa veḷḷavumallāte"},{"chapter":78,"verse":26,"text":"anuyēājyamāya pratiphalamatre at‌"},{"chapter":78,"verse":27,"text":"tīrccayāyuṁ avar vicāraṇa pratīkṣikkunnillāyirunnu"},{"chapter":78,"verse":28,"text":"nam'muṭe dr̥ṣṭāntaṅṅaḷe avar tīrttuṁ niṣēdhiccu taḷḷukayuṁ ceytu"},{"chapter":78,"verse":29,"text":"ētu kāryavuṁ nāṁ eḻuti tiṭṭappeṭuttiyirikkunnu"},{"chapter":78,"verse":30,"text":"atināl niṅṅaḷ (śikṣa) āsvadiccu keāḷḷuka. tīrccayāyuṁ nāṁ niṅṅaḷkku śikṣayallāteānnuṁ vard'dhippiccu tarikayilla"}]}