{
    "rukus": [
        {
            "chapter": 93,
            "verse": 1,
            "text": "pūrvvāhnaṁ tanneyāṇa satyaṁ"
        },
        {
            "chapter": 93,
            "verse": 2,
            "text": "rātri tanneyāṇa satyaṁ; at śāntamāvumpēāḷ"
        },
        {
            "chapter": 93,
            "verse": 3,
            "text": "(nabiyē,) ninṟe rakṣitāv ninne kaiviṭṭiṭṭilla. veṟuttiṭṭumilla"
        },
        {
            "chapter": 93,
            "verse": 4,
            "text": "tīrccayāyuṁ paralēākamāṇ ninakk ihalēākattekkāḷ uttamamāyiṭṭuḷḷat‌"
        },
        {
            "chapter": 93,
            "verse": 5,
            "text": "vaḻiye ninakk ninṟe rakṣitāv (anugrahaṅṅaḷ) nalkunnatuṁ appēāḷ nī tr̥ptippeṭunnatumāṇa.‌"
        },
        {
            "chapter": 93,
            "verse": 6,
            "text": "ninne avan oru anāthayāyi kaṇeṭattukayuṁ , enniṭṭ (ninakk‌) āśrayaṁ nalkukayuṁ ceytillē"
        },
        {
            "chapter": 93,
            "verse": 7,
            "text": "ninne avan vaḻi aṟiyāttavanāyi kaṇeṭattukayuṁ enniṭṭ (ninakk‌) mārgadarśanaṁ nalkukayuṁ ceytirikkunnu"
        },
        {
            "chapter": 93,
            "verse": 8,
            "text": "ninne avan daridranāyi kaṇeṭattukayuṁ enniṭṭ avan aiśvaryaṁ nalkukayuṁ ceytirikkunnu"
        },
        {
            "chapter": 93,
            "verse": 9,
            "text": "ennirikke anāthaye nī aṭiccamarttarut‌"
        },
        {
            "chapter": 93,
            "verse": 10,
            "text": "cēādicc varunnavane nī viraṭṭi viṭukayuṁ ceyyarut‌"
        },
        {
            "chapter": 93,
            "verse": 11,
            "text": "ninṟe rakṣitāvinṟe anugrahatte sambandhicc nī sansārikkuka"
        }
    ]
}