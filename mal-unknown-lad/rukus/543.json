{
    "rukus": [
        {
            "chapter": 101,
            "verse": 1,
            "text": "bhayaṅkaramāya ā sambhavaṁ"
        },
        {
            "chapter": 101,
            "verse": 2,
            "text": "bhayaṅkaramāya sambhavaṁ ennāl entākunnu"
        },
        {
            "chapter": 101,
            "verse": 3,
            "text": "bhayaṅkaramāya sambhavamennāl entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 101,
            "verse": 4,
            "text": "manuṣyanmār cinniccitaṟiya pāṟṟayeppēāle ākunna divasaṁ"
        },
        {
            "chapter": 101,
            "verse": 5,
            "text": "parvvataṅṅaḷ kaṭañña āṭṭin rēāmaṁ pēāleyuṁ"
        },
        {
            "chapter": 101,
            "verse": 6,
            "text": "appēāḷ ēteārāḷuṭe tulāsukaḷ ghanaṁ tūṅṅiyēā"
        },
        {
            "chapter": 101,
            "verse": 7,
            "text": "avan santr̥ptamāya jīvitattilāyirikkuṁ"
        },
        {
            "chapter": 101,
            "verse": 8,
            "text": "ennāl ēteārāḷuṭe tulāsukaḷ tūkkaṁ kuṟaññatāyēā"
        },
        {
            "chapter": 101,
            "verse": 9,
            "text": "avanṟe saṅkētaṁ hāviyaḥ āyirikkuṁ"
        },
        {
            "chapter": 101,
            "verse": 10,
            "text": "hāviyaḥ ennāl entāṇenn ninakkaṟiyumēā"
        },
        {
            "chapter": 101,
            "verse": 11,
            "text": "cūṭēṟiya narakāgniyatre at‌"
        }
    ]
}