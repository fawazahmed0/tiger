{"chapter":[{"chapter":87,"verse":1,"text":"atyunnatanāya ninṟe rakṣitāvinṟe nāmaṁ prakīrttikkuka"},{"chapter":87,"verse":2,"text":"sr̥ṣṭikkukayuṁ, sanvidhānikkukayuṁ ceyta (rakṣitāvinṟe"},{"chapter":87,"verse":3,"text":"vyavastha nirṇayiccu mārgadarśanaṁ nalkiyavanuṁ"},{"chapter":87,"verse":4,"text":"mēccil puṟaṅṅaḷ ulpādippiccavanuṁ"},{"chapter":87,"verse":5,"text":"enniṭṭ atine uṇaṅṅikkariñña cavaṟākki tīrttavanumāya (rakṣitāvinṟe nāmaṁ"},{"chapter":87,"verse":6,"text":"ninakk nāṁ ōtittarāṁ. nī maṟannupēākukayilla"},{"chapter":87,"verse":7,"text":"allāhu uddēśiccateāḻike. tīrccayāyuṁ avan parasyamāyatuṁ, rahasyamāyirikkunnatuṁ aṟiyunnu"},{"chapter":87,"verse":8,"text":"kūṭutal eḷuppamuḷḷatilēkk ninakk nāṁ sekaryamuṇṭākkittarunnatumāṇ‌"},{"chapter":87,"verse":9,"text":"atināl upadēśaṁ phalappeṭunnuveṅkil nī upadēśiccu keāḷḷuka"},{"chapter":87,"verse":10,"text":"bhayappeṭunnavar upadēśaṁ svīkariccu keāḷḷunnatāṇ‌"},{"chapter":87,"verse":11,"text":"ēṟṟavuṁ nirbhāgyavānāyiṭṭuḷḷavan atine (upadēśatte) viṭṭakannu pēākunnatāṇ‌"},{"chapter":87,"verse":12,"text":"valiya agniyil kaṭann eriyunnavanatre avan"},{"chapter":87,"verse":13,"text":"pinnīṭ avan atil marikkukayilla. jīvikkukayumilla"},{"chapter":87,"verse":14,"text":"tīrccayāyuṁ pariśud'dhi nēṭiyavar vijayaṁ prāpiccu"},{"chapter":87,"verse":15,"text":"tanṟe rakṣitāvinṟe nāmaṁ smarikkukayuṁ enniṭṭ namaskarikkukayuṁ (ceytavan"},{"chapter":87,"verse":16,"text":"pakṣe, niṅṅaḷ aihikajīvitattinn kūṭutal prādhān'yaṁ nalkunnu"},{"chapter":87,"verse":17,"text":"paralēākamākunnu ēṟṟavuṁ uttamavuṁ nilanilkkunnatuṁ"},{"chapter":87,"verse":18,"text":"tīrccayāyuṁ it ādyatte ēṭukaḷil tanneyuṇṭ‌"},{"chapter":87,"verse":19,"text":"atāyat ibrāhīminṟeyuṁ mūsāyuṭeyuṁ ēṭukaḷil"}]}