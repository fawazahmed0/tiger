{
    "chapter": [
        {
            "chapter": 90,
            "verse": 1,
            "text": "ī rājyatte (makkaye) kkeāṇṭ ñān satyaṁ ceytu paṟayunnu"
        },
        {
            "chapter": 90,
            "verse": 2,
            "text": "nīyākaṭṭe ī rājyatte nivāsiyāṇ tānuṁ"
        },
        {
            "chapter": 90,
            "verse": 3,
            "text": "janayitāvineyuṁ, avan janippikkunnatineyuṁ tanneyāṇa satyaṁ"
        },
        {
            "chapter": 90,
            "verse": 4,
            "text": "tīrccayāyuṁ manuṣyane nāṁ sr̥ṣṭicciṭṭuḷḷat klēśaṁ sahikkēṇṭa nilayilākunnu"
        },
        {
            "chapter": 90,
            "verse": 5,
            "text": "avane piṭikūṭān ārkkuṁ sādhikkukayē illenn avan vicārikkunnuṇēṭā"
        },
        {
            "chapter": 90,
            "verse": 6,
            "text": "avan paṟayunnu: ñān mēlkkumēl paṇaṁ tulaccirikkunnu enn‌"
        },
        {
            "chapter": 90,
            "verse": 7,
            "text": "avan vicārikkunnuṇēṭā; avane āruṅkaṇṭiṭṭillenn‌"
        },
        {
            "chapter": 90,
            "verse": 8,
            "text": "avan nāṁ raṇṭ kaṇṇukaḷ uṇṭākki keāṭuttiṭṭillē"
        },
        {
            "chapter": 90,
            "verse": 9,
            "text": "oru nāvuṁ raṇṭu cuṇṭukaḷuṁ"
        },
        {
            "chapter": 90,
            "verse": 10,
            "text": "teḷiññu nilkkunna raṇṭu pātakaḷ avannu nāṁ kāṭṭikeāṭukkukayuṁ ceytirikkunnu"
        },
        {
            "chapter": 90,
            "verse": 11,
            "text": "enniṭṭ ā malampātayil avan taḷḷikkaṭannilla"
        },
        {
            "chapter": 90,
            "verse": 12,
            "text": "ā malampāta entāṇenn ninakkaṟiyāmēā"
        },
        {
            "chapter": 90,
            "verse": 13,
            "text": "oru aṭimaye mēācippikkuka"
        },
        {
            "chapter": 90,
            "verse": 14,
            "text": "alleṅkil paṭṭiṇiyuḷḷa nāḷil bhakṣaṇaṁ keāṭukkuka"
        },
        {
            "chapter": 90,
            "verse": 15,
            "text": "kuṭumbabandhamuḷḷa anāthaykk‌"
        },
        {
            "chapter": 90,
            "verse": 16,
            "text": "alleṅkil kaṭutta dāridy‌ramuḷḷa sādhuvin‌"
        },
        {
            "chapter": 90,
            "verse": 17,
            "text": "puṟame, viśvasikkukayuṁ, kṣama keāṇṭuṁ kāruṇyaṁ keāṇṭuṁ parasparaṁ upadēśikkukayuṁ ceytavaruṭe kūṭṭattil avan āyittīrukayuṁ ceyyuka"
        },
        {
            "chapter": 90,
            "verse": 18,
            "text": "aṅṅane ceyyunnavaratre valatupakṣakkār"
        },
        {
            "chapter": 90,
            "verse": 19,
            "text": "nam'muṭe dr̥ṣṭāntaṅṅaḷ niṣēdhiccavarārēā avaratre iṭatupakṣattinṟe āḷkkār"
        },
        {
            "chapter": 90,
            "verse": 20,
