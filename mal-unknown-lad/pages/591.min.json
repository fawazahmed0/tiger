{"pages":[{"chapter":86,"verse":1,"text":"ākāśaṁ tanneyāṇa, rātriyil varunnatu tanneyāṇa satyaṁ"},{"chapter":86,"verse":2,"text":"rātriyil varunnat ennāl entāṇenn ninakkaṟiyumēā"},{"chapter":86,"verse":3,"text":"tuḷacc kayaṟunna nakṣatramatre at‌"},{"chapter":86,"verse":4,"text":"tanṟe kāryattil oru mēlnēāṭṭakkāranuṇṭāyikkeāṇṭallāte yāteārāḷumilla"},{"chapter":86,"verse":5,"text":"ennāl manuṣyan cinticcu nēākkaṭṭe tān entil ninnāṇ sr̥ṣṭikkappeṭṭirikkunnat enn‌"},{"chapter":86,"verse":6,"text":"teṟiccu vīḻunna oru drāvakattil ninnatre avan sr̥ṣṭikkappeṭṭirikkunnat‌"},{"chapter":86,"verse":7,"text":"mutukellinuṁ, vāriyellukaḷkkumiṭayil ninn at puṟattu varunnu"},{"chapter":86,"verse":8,"text":"avane (manuṣyane) tiriccukeāṇṭu varān tīrccayāyuṁ avan (allāhu) kaḻivuḷḷavanākunnu"},{"chapter":86,"verse":9,"text":"rahasyaṅṅaḷ pariśēādhikkappeṭunna divasaṁ"},{"chapter":86,"verse":10,"text":"appēāḷ avan (manuṣyan‌) yāteāru śaktiyēā, sahāyiyēā uṇṭāyirikkukayilla"},{"chapter":86,"verse":11,"text":"āvartticc maḻapeyyikkunna ākāśattekkeāṇṭuṁ"},{"chapter":86,"verse":12,"text":"sasyalatādikaḷ muḷappikkunna bhūmiyekkeāṇṭuṁ satyaṁ"},{"chapter":86,"verse":13,"text":"tīrccayāyuṁ itu nirṇāyakamāya oru vākkākunnu"},{"chapter":86,"verse":14,"text":"itu tamāśayalla"},{"chapter":86,"verse":15,"text":"tīrccayāyuṁ avar (valiya) tantraṁ prayēāgiccu keāṇṭirikkuṁ"},{"chapter":86,"verse":16,"text":"ñānuṁ (valiya) tantraṁ prayēāgiccu keāṇṭirikkuṁ"},{"chapter":86,"verse":17,"text":"ākayāl (nabiyē,) nī satyaniṣēdhikaḷkk kālatāmasaṁ nalkuka. alpasamayattēkk avarkk tāmasaṁ nalkiyēkkuka"},{"chapter":87,"verse":1,"text":"atyunnatanāya ninṟe rakṣitāvinṟe nāmaṁ prakīrttikkuka"},{"chapter":87,"verse":2,"text":"sr̥ṣṭikkukayuṁ, sanvidhānikkukayuṁ ceyta (rakṣitāvinṟe"},{"chapter":87,"verse":3,"text":"vyavastha nirṇayiccu mārgadarśanaṁ nalkiyavanuṁ"},{"chapter":87,"verse":4,"text":"mēccil puṟaṅṅaḷ ulpādippiccavanuṁ"},{"chapter":87,"verse":5,"text":"enniṭṭ atine uṇaṅṅikkariñña cavaṟākki tīrttavanumāya (rakṣitāvinṟe nāmaṁ"},{"chapter":87,"verse":6,"text":"ninakk nāṁ ōtittarāṁ. nī maṟannupēākukayilla"},{"chapter":87,"verse":7,"text":"allāhu uddēśiccateāḻike. tīrccayāyuṁ avan parasyamāyatuṁ, rahasyamāyirikkunnatuṁ aṟiyunnu"},{"chapter":87,"verse":8,"text":"kūṭutal eḷuppamuḷḷatilēkk ninakk nāṁ sekaryamuṇṭākkittarunnatumāṇ‌"},{"chapter":87,"verse":9,"text":"atināl upadēśaṁ phalappeṭunnuveṅkil nī upadēśiccu keāḷḷuka"},{"chapter":87,"verse":10,"text":"bhayappeṭunnavar upadēśaṁ svīkariccu keāḷḷunnatāṇ‌"},{"chapter":87,"verse":11,"text":"ēṟṟavuṁ nirbhāgyavānāyiṭṭuḷḷavan atine (upadēśatte) viṭṭakannu pēākunnatāṇ‌"},{"chapter":87,"verse":12,"text":"valiya agniyil kaṭann eriyunnavanatre avan"},{"chapter":87,"verse":13,"text":"pinnīṭ avan atil marikkukayilla. jīvikkukayumilla"},{"chapter":87,"verse":14,"text":"tīrccayāyuṁ pariśud'dhi nēṭiyavar vijayaṁ prāpiccu"},{"chapter":87,"verse":15,"text":"tanṟe rakṣitāvinṟe nāmaṁ smarikkukayuṁ enniṭṭ namaskarikkukayuṁ (ceytavan"}]}