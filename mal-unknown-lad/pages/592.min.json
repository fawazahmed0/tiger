{"pages":[{"chapter":87,"verse":16,"text":"pakṣe, niṅṅaḷ aihikajīvitattinn kūṭutal prādhān'yaṁ nalkunnu"},{"chapter":87,"verse":17,"text":"paralēākamākunnu ēṟṟavuṁ uttamavuṁ nilanilkkunnatuṁ"},{"chapter":87,"verse":18,"text":"tīrccayāyuṁ it ādyatte ēṭukaḷil tanneyuṇṭ‌"},{"chapter":87,"verse":19,"text":"atāyat ibrāhīminṟeyuṁ mūsāyuṭeyuṁ ēṭukaḷil"},{"chapter":88,"verse":1,"text":"(nabiyē,) ā mūṭunna sambhavatte sambandhicca varttamānaṁ ninakk vannukiṭṭiyēā"},{"chapter":88,"verse":2,"text":"annē divasaṁ cila mukhaṅṅaḷ tāḻmakāṇikkunnatuṁ"},{"chapter":88,"verse":3,"text":"paṇiyeṭutt kṣīṇiccatumāyirikkuṁ"},{"chapter":88,"verse":4,"text":"cūṭēṟiya agniyil ava pravēśikkunnatāṇ‌"},{"chapter":88,"verse":5,"text":"cuṭṭutiḷakkunna oru uṟavil ninn avarkku kuṭippikkappeṭunnatāṇ‌"},{"chapter":88,"verse":6,"text":"ḷarī'il ninnallāte avarkk yāteāru āhāravumilla"},{"chapter":88,"verse":7,"text":"at pēāṣaṇaṁ nalkukayilla. viśappin śamanamuṇṭākkukayumilla"},{"chapter":88,"verse":8,"text":"cila mukhaṅṅaḷ annu tuṭuttu minuttatāyirikkuṁ"},{"chapter":88,"verse":9,"text":"avayuṭe prayatnatteppaṟṟi tr̥ptiyaṭaññavayumāyirikkuṁ"},{"chapter":88,"verse":10,"text":"unnatamāya svargattil"},{"chapter":88,"verse":11,"text":"aviṭe yāteāru nirart'thakamāya vākkuṁ avar kēḷkkukayilla"},{"chapter":88,"verse":12,"text":"atil oḻuki keāṇṭirikkunna aruviyuṇṭ‌"},{"chapter":88,"verse":13,"text":"atil uyarttivekkappeṭṭa kaṭṭilukaḷuṁ"},{"chapter":88,"verse":14,"text":"tayyāṟākki vekkappeṭṭa kēāppakaḷuṁ"},{"chapter":88,"verse":15,"text":"aṇiyāyi vekkappeṭṭa talayaṇakaḷuṁ"},{"chapter":88,"verse":16,"text":"viriccuvekkappeṭṭa paravatānikaḷumuṇṭ‌"},{"chapter":88,"verse":17,"text":"oṭṭakattinṟe nērkk avar nēākkunnillē? at eṅṅane sr̥ṣṭikkappeṭṭirikkunnu enn‌"},{"chapter":88,"verse":18,"text":"ākāśattēkk (avar nēākkunnillē?) at eṅṅane uyarttappeṭṭirikkunnu enn‌"},{"chapter":88,"verse":19,"text":"parvvataṅṅaḷilēkk (avar nēākkunnillē?) ava eṅṅane nāṭṭinirttappeṭṭirikkunnu venn‌"},{"chapter":88,"verse":20,"text":"bhūmiyilēkk (avar nēākkunnillē?) at eṅṅane parattappeṭṭirikkunnuvenn‌"},{"chapter":88,"verse":21,"text":"atināl (nabiyē,) nī ulbēādhippikkuka. nī oru ulbēādhakan mātramākunnu"},{"chapter":88,"verse":22,"text":"nī avaruṭe mēl adhikāraṁ celuttēṇṭavanalla"},{"chapter":88,"verse":23,"text":"pakṣe, vallavanuṁ tiriññukaḷayukayuṁ, aviśvasikkukayuṁ ceyyunna pakṣaṁ"},{"chapter":88,"verse":24,"text":"allāhu avane ēṟṟavuṁ valiya śikṣa śikṣikkunnatāṇ‌"},{"chapter":88,"verse":25,"text":"tīrccayāyuṁ nam'muṭe aṭuttēkkāṇ avaruṭe maṭakkaṁ"},{"chapter":88,"verse":26,"text":"pinnīṭ‌, tīrccayāyuṁ nam'muṭe bādhyatayāṇ avaruṭe vicāraṇa"}]}