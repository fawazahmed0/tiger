{"pages":[{"chapter":100,"verse":10,"text":"hr̥dayaṅṅaḷiluḷḷat veḷikk keāṇṭu varappeṭukayuṁ ceytāl"},{"chapter":100,"verse":11,"text":"tīrccayāyuṁ avaruṭe rakṣitāv annē divasaṁ avare paṟṟi sūkṣmamāyi aṟiyunnavan tanneyākunnu"},{"chapter":101,"verse":1,"text":"bhayaṅkaramāya ā sambhavaṁ"},{"chapter":101,"verse":2,"text":"bhayaṅkaramāya sambhavaṁ ennāl entākunnu"},{"chapter":101,"verse":3,"text":"bhayaṅkaramāya sambhavamennāl entāṇenn ninakkaṟiyumēā"},{"chapter":101,"verse":4,"text":"manuṣyanmār cinniccitaṟiya pāṟṟayeppēāle ākunna divasaṁ"},{"chapter":101,"verse":5,"text":"parvvataṅṅaḷ kaṭañña āṭṭin rēāmaṁ pēāleyuṁ"},{"chapter":101,"verse":6,"text":"appēāḷ ēteārāḷuṭe tulāsukaḷ ghanaṁ tūṅṅiyēā"},{"chapter":101,"verse":7,"text":"avan santr̥ptamāya jīvitattilāyirikkuṁ"},{"chapter":101,"verse":8,"text":"ennāl ēteārāḷuṭe tulāsukaḷ tūkkaṁ kuṟaññatāyēā"},{"chapter":101,"verse":9,"text":"avanṟe saṅkētaṁ hāviyaḥ āyirikkuṁ"},{"chapter":101,"verse":10,"text":"hāviyaḥ ennāl entāṇenn ninakkaṟiyumēā"},{"chapter":101,"verse":11,"text":"cūṭēṟiya narakāgniyatre at‌"},{"chapter":102,"verse":1,"text":"parasparaṁ perumanaṭikkuka enna kāryaṁ niṅṅaḷe aśrad'dhayilākkiyirikkunnu"},{"chapter":102,"verse":2,"text":"niṅṅaḷ śavakuṭīraṅṅaḷ sandarśikkunnat varēkkuṁ"},{"chapter":102,"verse":3,"text":"nis'sanśayaṁ, niṅṅaḷ vaḻiye aṟiññ keāḷḷuṁ"},{"chapter":102,"verse":4,"text":"pinneyuṁ nis'sanśayaṁ niṅṅaḷ vaḻiye aṟiññ keāḷḷuṁ"},{"chapter":102,"verse":5,"text":"nis'sanśayaṁ, niṅṅaḷ dr̥ḍhamāya aṟiv aṟiyumāyirunneṅkil"},{"chapter":102,"verse":6,"text":"jvalikkunna narakatte niṅṅaḷ kāṇuka tanne ceyyuṁ"},{"chapter":102,"verse":7,"text":"pinne tīrccayāyuṁ niṅṅaḷ atine dr̥ḍhamāyuṁ kaṇṇāl kāṇuka tanne ceyyuṁ"},{"chapter":102,"verse":8,"text":"pinnīṭ ā divasattil sukhānubhavaṅṅaḷe paṟṟi tīrccayāyuṁ niṅṅaḷ cēādyaṁ ceyyappeṭukatanne ceyyuṁ"}]}