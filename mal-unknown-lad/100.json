{
    "chapter": [
        {
            "chapter": 100,
            "verse": 1,
            "text": "kitaccu keāṇṭ ōṭunnavayuṁ"
        },
        {
            "chapter": 100,
            "verse": 2,
            "text": "aṅṅane (kuḷamp kallil) urasi tīppeāri paṟappikkunnavayuṁ"
        },
        {
            "chapter": 100,
            "verse": 3,
            "text": "enniṭṭ prabhātattil ākramaṇaṁ naṭattunnavayuṁ"
        },
        {
            "chapter": 100,
            "verse": 4,
            "text": "annēratt peāṭipaṭalaṁ iḷakkiviṭṭavayuṁ"
        },
        {
            "chapter": 100,
            "verse": 5,
            "text": "atilūṭe (śatru) saṅghattinṟe naṭuvil pravēśiccavayuṁ (kutirakaḷ) tanne satyaṁ"
        },
        {
            "chapter": 100,
            "verse": 6,
            "text": "tīrccayāyuṁ manuṣyan tanṟe rakṣitāvinēāṭ nandikeṭṭavan tanne"
        },
        {
            "chapter": 100,
            "verse": 7,
            "text": "tīrccayāyuṁ avan atinn sākṣyaṁ vahikkunnavanumākunnu"
        },
        {
            "chapter": 100,
            "verse": 8,
            "text": "tīrccayāyuṁ avan dhanattēāṭuḷḷa snēhaṁ kaṭhinamāyavanākunnu"
        },
        {
            "chapter": 100,
            "verse": 9,
            "text": "ennāl avan aṟiyunnillē? khab‌ṟukaḷiluḷḷat iḷakkimaṟicc puṟatt keāṇṭ varappeṭukayuṁ"
        },
        {
            "chapter": 100,
            "verse": 10,
            "text": "hr̥dayaṅṅaḷiluḷḷat veḷikk keāṇṭu varappeṭukayuṁ ceytāl"
        },
        {
            "chapter": 100,
            "verse": 11,
            "text": "tīrccayāyuṁ avaruṭe rakṣitāv annē divasaṁ avare paṟṟi sūkṣmamāyi aṟiyunnavan tanneyākunnu"
        }
    ]
}