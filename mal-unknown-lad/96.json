{
    "chapter": [
        {
            "chapter": 96,
            "verse": 1,
            "text": "sr̥ṣṭiccavanāya ninṟe rakṣitāvinṟe nāmattil vāyikkuka"
        },
        {
            "chapter": 96,
            "verse": 2,
            "text": "manuṣyane avan bhrūṇattil ninn sr̥ṣṭiccirikkunnu"
        },
        {
            "chapter": 96,
            "verse": 3,
            "text": "nī vāyikkuka ninṟe rakṣitāv ēṟṟavuṁ valiya audāryavānākunnu"
        },
        {
            "chapter": 96,
            "verse": 4,
            "text": "pēna keāṇṭ paṭhippiccavan"
        },
        {
            "chapter": 96,
            "verse": 5,
            "text": "manuṣyan aṟiyāttat avan paṭhippiccirikkunnu"
        },
        {
            "chapter": 96,
            "verse": 6,
            "text": "nis'sanśayaṁ manuṣyan dhikkāriyāyi tīrunnu"
        },
        {
            "chapter": 96,
            "verse": 7,
            "text": "tanne svayaṁ paryāptanāyi kaṇṭatināl"
        },
        {
            "chapter": 96,
            "verse": 8,
            "text": "tīrccayāyuṁ ninṟe rakṣitāvilēkkāṇ maṭakkaṁ"
        },
        {
            "chapter": 96,
            "verse": 9,
            "text": "vilakkunnavane nī kaṇṭuvēā"
        },
        {
            "chapter": 96,
            "verse": 10,
            "text": "oru aṭiyane, avan namaskariccāl"
        },
        {
            "chapter": 96,
            "verse": 11,
            "text": "addēhaṁ sanmārgattilāṇeṅkil , (ā vilakkunnavanṟe avastha entāyirikkumenn‌) nī kaṇṭuvēā"
        },
        {
            "chapter": 96,
            "verse": 12,
            "text": "athavā addēhaṁ sūkṣmata kai keāḷḷān kalpiccirikkukayāṇeṅkil"
        },
        {
            "chapter": 96,
            "verse": 13,
            "text": "avan (ā vilakkunnavan) niṣēdhiccu taḷḷukayuṁ tiriññukaḷayukayuṁ ceytirikkayāṇeṅkil (avanṟe avastha entāyirikkumenn‌) nī kaṇṭuvēā"
        },
        {
            "chapter": 96,
            "verse": 14,
            "text": "avan manas'silākkiyiṭṭillē, allāhu kāṇunnuṇeṭann‌"
        },
        {
            "chapter": 96,
            "verse": 15,
            "text": "nis'sanśayaṁ. avan viramicciṭṭilleṅkal nāṁ ā kuṭuma piṭiccu valikkuka tanne ceyyuṁ"
        },
        {
            "chapter": 96,
            "verse": 16,
            "text": "kaḷḷaṁ paṟayunna , pāpaṁ ceyyunna kuṭuma"
        },
        {
            "chapter": 96,
            "verse": 17,
            "text": "enniṭṭ avan avanṟe sabhayiluḷḷavare viḷiccukeāḷḷaṭṭe"
        },
        {
            "chapter": 96,
            "verse": 18,
            "text": "nāṁ sabāniyattine (śikṣa naṭappākkunna malakkukaḷe) viḷiccukeāḷḷāṁ"
        },
        {
            "chapter": 96,
            "verse": 19,
            "text": "nis'sanśayaṁ; nī avane anusariccu pēākarut , nī praṇamikkukayuṁ sāmīpyaṁ nēṭukayuṁ ceyyuka"
        }
    ]
}