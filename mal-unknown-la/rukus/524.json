{
    "rukus": [
        {
            "chapter": 82,
            "verse": 1,
            "text": "akasam peatti pilarumpeal"
        },
        {
            "chapter": 82,
            "verse": 2,
            "text": "naksatrannal kealinnu vilumpeal"
        },
        {
            "chapter": 82,
            "verse": 3,
            "text": "samudrannal peatti olukumpeal"
        },
        {
            "chapter": 82,
            "verse": 4,
            "text": "khab‌rukal ilakkimarikkappetumpeal"
        },
        {
            "chapter": 82,
            "verse": 5,
            "text": "orea vyaktiyum tan munkutti ceytu veccatum pinneatt merrivccatum entanenn ariyunnatan‌"
        },
        {
            "chapter": 82,
            "verse": 6,
            "text": "he; manusya, udaranaya ninre raksitavinre karyattil ninne vanciccu kalannatentan‌"
        },
        {
            "chapter": 82,
            "verse": 7,
            "text": "ninne srstikkukayum, ninne sanvidhanikkukayum , ninne sariyaya avasthayilakkukayum ceytavanatre avan"
        },
        {
            "chapter": 82,
            "verse": 8,
            "text": "tan uddesicca rupattil ninne sanghatippiccavan"
        },
        {
            "chapter": 82,
            "verse": 9,
            "text": "alla; pakse, pratiphala natapatiye ninnal nisedhiccu tallunnu"
        },
        {
            "chapter": 82,
            "verse": 10,
            "text": "tirccayayum ninnalute mel cila melneattakkarunt‌"
        },
        {
            "chapter": 82,
            "verse": 11,
            "text": "rekhappetuttivekkunna cila man'yanmar"
        },
        {
            "chapter": 82,
            "verse": 12,
            "text": "ninnal pravarttikkunnat avar ariyunnu"
        },
        {
            "chapter": 82,
            "verse": 13,
            "text": "tirccayayum sukrtavanmar sukhanubhavattil tanneyayirikkum"
        },
        {
            "chapter": 82,
            "verse": 14,
            "text": "tirccayayum durmargikal jvalikkunna narakagniyil tanneyayirikkum"
        },
        {
            "chapter": 82,
            "verse": 15,
            "text": "pratiphalattinre nalil avaratil katann eriyunnatan‌"
        },
        {
            "chapter": 82,
            "verse": 16,
            "text": "avarkk atil ninn mari nilkkanavilla"
        },
        {
            "chapter": 82,
            "verse": 17,
            "text": "pratiphalanatapatiyute divasam ennal entanenn ninakkariyumea"
        },
        {
            "chapter": 82,
            "verse": 18,
            "text": "vintum; pratiphalanatapatiyute divasam ennal entanenn ninakkariyumea"
        },
        {
            "chapter": 82,
            "verse": 19,
            "text": "oralkkum marrearalkku venti yateannum adhinappetuttanavatta oru divasam. anne divasam kaikaryakarttrtvam allahuvinnayirikkum"
        }
    ]
}